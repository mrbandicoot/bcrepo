<?xml version="1.0" encoding="UTF-8"?>
    <addon id="repository.bandicootbuilds" name="Bandicoot Builds Repository" version="1.0.4" provider-name="Bandicoot Builds">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="Bandicoot Builds Repository">
            <info compressed="false">https://raw.githubusercontent.com/mrbandicoot/bcrepo/_repo/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/mrbandicoot/bcrepo/_repo/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/mrbandicoot/bcrepo/_repo/</datadir>
            <hashes>false</hashes>
